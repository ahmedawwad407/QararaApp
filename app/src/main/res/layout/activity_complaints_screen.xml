<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zircon"
    tools:context=".ComplaintsScreen">


    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".HomeActivity">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rectangel_3"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="تقديم الشكوى"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>


    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="50dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="رقم الهـــــوية"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/sent_et_id"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edit_text_background3"
                android:importantForAutofill="yes"
                android:inputType="number"
                android:maxLines="1"
                android:minHeight="48dp"
                android:padding="8dp"
                android:singleLine="true"
                android:textColorLink="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="رقم الجـــــوال"
                android:textSize="20sp"

                android:textColor="#372c24" />

            <EditText
                android:id="@+id/sent_et_phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background3"
                android:inputType="phone"
                android:maxLines="1"
                android:minHeight="48dp"
                android:padding="8dp"
                android:singleLine="true"
                android:textColorLink="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="عنـــوان الشكوى"
                android:textSize="20sp"

                android:textColor="#372c24" />

            <EditText
                android:id="@+id/sent_et_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background3"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="48dp"
                android:padding="8dp"
                android:singleLine="true"
                android:textColorLink="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="المـــــنطقة"
                android:textSize="20sp"

                android:textColor="#372c24" />

            <Spinner
                android:id="@+id/sent_sp_area"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background3"
                android:entries="@array/spinnerarea"
                android:maxLines="1"
                android:minHeight="48dp"
                android:padding="4dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="أقرب معلم"
                android:textSize="20sp"

                android:textColor="#372c24" />

            <EditText
                android:id="@+id/sent_sp_near"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background3"
                android:maxLines="1"
                android:minHeight="48dp"
                android:padding="4dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="وصف العنوان"
                android:textSize="20sp"

                android:textColor="#372c24" />

            <EditText
                android:id="@+id/sent_et_description"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background3"
                android:inputType="text"
                android:maxLines="4"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:singleLine="true"
                android:textColorLink="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="التصنيف"
                android:textSize="20sp"

                android:textColor="#372c24" />

            <Spinner
                android:id="@+id/sent_sp_category"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background3"
                android:entries="@array/spinnercategory"
                android:maxLines="1"
                android:minHeight="48dp"
                android:padding="4dp"
                android:singleLine="true" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="نص الشكوى"
                android:textSize="20sp"

                android:textColor="#372c24" />

            <EditText
                android:id="@+id/sent_et_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background3"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:padding="20dp"
                android:scrollbars="vertical"
                android:singleLine="true"
                android:textColorLink="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/sent_btn_sent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:background="@drawable/button_background"
                android:text="إرسال"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>